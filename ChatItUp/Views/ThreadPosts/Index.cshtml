@model ChatItUp.Models.ViewModels.ThreadPostIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>@Model.Thread.Title</h2>

<p>
    <a asp-action="Create" asp-route-id="@Model.Thread.ThreadId">Reply</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <span>By</span>
            </th>
                <th>
                    <span>Message</span>
                </th>
                <th>
                    <span>Created on</span>
                </th>

        </tr>
    </thead>

    <tbody>

        <tr class="msg-update-boxes" >
        <td>
           <img src=" @Model.Thread.User.ProfileImage" alt="img" class="smallimg" />
            @Model.Thread.User.Firstname
            @Model.Thread.User.Lastname
        </td>
        <td >
           @Model.Thread.AuthorMessage
        </td>
        <td>
           @Model.Thread.created
        </td>


        </tr>


    </tbody>
 


    <tbody>
        
@foreach (var item in Model.threadpost) {
        <tr>
            <td>
                -Reply-
                @*Place where a user can click a persons name and be taken to their profile*@
                <a asp-controller="Relations" asp-action="UserProfile" asp-route-id="@item.user.Id">
                <img src=" @item.user.ProfileImage" alt="img" class="smallimg" />
                @Html.DisplayFor(modelItem => item.user.Firstname)
                @Html.DisplayFor(x => item.user.Lastname)
                    </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateCreatd)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.ThreadPostId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.ThreadPostId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
