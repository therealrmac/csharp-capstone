@model IndexViewModel


@{
    ViewData["Title"] = "View";
}

<h2>Edit Profile</h2>

<form asp-action="EditProfile" enctype="multipart/form-data" >

    <div class="form-horizontal">
        <h4>Edit Your Profile</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ApplicationUser.Id" />
        <input type="hidden" asp-for="ApplicationUser.PasswordHash" />
        <div class="form-group">
            <label asp-for="ApplicationUser.Firstname" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ApplicationUser.Firstname" class="form-control" />
                <span asp-validation-for="ApplicationUser.Firstname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ApplicationUser.Lastname" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="ApplicationUser.Lastname" class="form-control" />
                <span asp-validation-for="ApplicationUser.Lastname" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="hidden" asp-for="ApplicationUser.Email" class="form-control" />
            </div>
        </div>
        <div class="form-group">
        <label asp-for="@Model.profileImg">Set Profile Image:</label>
        <input asp-for="@Model.profileImg" class="form-control" type="file" accept="image/*" /><br><br>
        

        <label asp-for="@Model.bannerImg">Set Banner Image:</label>
        <input asp-for="@Model.bannerImg" class="form-control" type="file" accept="image/*" /><br><br>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
<div>
    <a asp-action="Index">Back to Profile</a>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}