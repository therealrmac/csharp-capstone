@model IEnumerable<ChatItUp.Models.Forum>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<p><a asp-controller="Categories" asp-action="Index">Categories </a>: Forum</p>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ThreadTitles)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ThreadTitles)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ForumId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ForumId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ForumId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
